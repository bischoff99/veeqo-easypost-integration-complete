# Veeqo API Configuration
VEEQO_API_KEY=your_veeqo_api_key_here
VEEQO_BASE_URL=https://api.veeqo.com
VEEQO_API_VERSION=v1

# EasyPost API Configuration
EASYPOST_API_KEY=your_easypost_test_key_here
EASYPOST_BASE_URL=https://api.easypost.com
EASYPOST_API_VERSION=v2

# Integration Service Configuration
INTEGRATION_API_KEY=your_secure_internal_api_key_generate_random
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/veeqo_integration
REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_for_signature_verification
WEBHOOK_BASE_URL=https://your-domain.com

# Security Configuration
JWT_SECRET=your_jwt_secret_for_internal_authentication
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_for_error_tracking
METRICS_ENABLED=true

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_WEBHOOKS=true

# Linear Integration (Optional)
LINEAR_API_KEY=your_linear_api_key
LINEAR_WEBHOOK_SECRET=your_linear_webhook_secret

# Notion Integration (Optional)
NOTION_API_KEY=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id